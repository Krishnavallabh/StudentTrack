<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/custom_seven"
    tools:context=".seminar">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/seminarlayout"
            android:layout_margin="5dp"
            android:contentDescription="@string/todo33" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_five"
            android:padding="5dp"
            android:text="@string/seminar1"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:layout_margin="5dp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="@string/seminar2"
            android:textColor="#ffffff"
            android:layout_margin="5dp"
            android:background="@drawable/custom_three"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            />



    </LinearLayout>


</ScrollView>